{
  "openapi": "3.0.2",
  "info": {
    "title": "Arc-E-Tect Phonebook API",
    "version": "1.0"
  },
  "paths": {
    "/contacts": {
      "get": {
        "description": "Get all Contacts stored in the Arc-E-Tect Phonebook.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "phone_number" : {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
